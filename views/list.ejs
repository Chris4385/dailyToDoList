<%- include("header") %>

        <div class="box headingBox" id="heading">
          <div class="trash-styling">
            <h1 class="task"><%= task %></h1>
            <form class="deleteListForm" action="/deleteList" method="POST">
            <button type="submit" class="deleteListButton" name="listName" value="<%= task%>">
              <i class="fas fa-trash-alt fa-2x"></i>
            </button>
          </form>
          </div>
          
          <h1 class="date"><%= dayName %> </h1>
        </div>
    
        <div class="box contentBox">
          <% newListItem.forEach(function(item){ %>
            <form action="/delete" method="POST">
              <div class="item">
                <input type="hidden" name="listName" value="<%= task%>" id=""></input>
                <input name="checkbox" type="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
                <p><%= item.item %></p>
            </div>  
            </form>
          <% }); %>
    
          <form class="item" action="/" method="POST">
            <label for="Input"></label>
            <input id="Input" type="text" name="item" placeholder="Upcoming task" autocomplete="off">
            <button type="submit" class="newItemButton" name="button" value="<%= task %>">+</button>
          </form>
      
        </div>
        
  <%- include("footer") %>
